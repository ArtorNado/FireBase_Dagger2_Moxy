<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_secondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SName"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorPurpleDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_firstName"
        app:layout_constraintTop_toTopOf="@id/tv_firstName" />

    <View
        android:id="@+id/tv_notif"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPink"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_firstName" />

    <TextView
        android:id="@+id/tv_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="FName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPurpleDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:textColor="@color/colorPurpleDark"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_notif"
        app:layout_constraintStart_toStartOf="@id/tv_firstName"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstName" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangladesh"
        android:textColor="@color/colorPurpleDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_notif"
        app:layout_constraintStart_toEndOf="@id/tv_from"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstName" />


</androidx.constraintlayout.widget.ConstraintLayout>
